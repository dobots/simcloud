<?xml version="1.0"?>
<launch>
 
    <arg name="marker_size" default="50" />
    <arg name="max_new_marker_error" default="0.08" />
    <arg name="max_track_error" default="0.2" />
    <arg name="max_frequency" default="24" />
    <arg name="cam_image_topic" default="camera/image_raw" />
    <arg name="cam_info_topic" default="camera/camera_info" />	
    <arg name="output_frame" default="usb_camera::camera_link" />
 
  <node name="ar_track_alvar" pkg="ar_track_alvar" type="individualMarkersNoKinect" respawn="true" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame) $(arg max_frequency)" />
  
</launch>
